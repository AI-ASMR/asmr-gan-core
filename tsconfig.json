{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2015",
        "moduleResolution": "Node",
        "sourceMap": false,
        "declaration": true,
        "lib": ["ES2015"],
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "@common/*": ["./common/*"],
            "@lib/*": ["./lib/*"],
            "@bin/*": ["./src/*"]
        }
    }
}